{
  "name": "reggex",
  "version": "0.2.2",
  "description": "A TypeScript library that provides a programmatic and human readable way to create strongly-typed regular expressions",
  "author": "P. Christopher Bowers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pcbowers/reggex.git"
  },
  "bugs": {
    "url": "https://github.com/pcbowers/reggex/issues"
  },
  "keywords": [
    "regular",
    "expressions",
    "javascript",
    "typescript",
    "typed"
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "minify": true,
    "clean": true,
    "dts": true,
    "outDir": "lib",
    "format": [
      "cjs",
      "esm"
    ]
  },
  "module": "./lib/index.js",
  "main": "./lib/index.cjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "type": "module",
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "build": "tsup",
    "lint": "prettier --check . && eslint --ignore-path .gitignore . && tsc --noEmit",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitest/coverage-c8": "^0.29.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "2.8.4",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.1",
    "vite-tsconfig-paths": "^4.0.5"
  }
}
